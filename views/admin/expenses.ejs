    <!-- modals -->
     <!--  Product Promo Modal-->
    <div class="modal fade" id="expensisModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel"
        aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title text-primary"  id="exampleModalLabel">Add New Expenses</h5>
                    <button class="close" type="button" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">×</span>
                    </button>
                </div>
                <div class="modal-body">
                 
                    <form method="post" action="/expenses">
                        <div class="row text-capitalize">
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label for="amount" class="col-form-label">Amount:</label>
                                    <input type="number" class="form-control" name="amount" id="discount">
                                </div>                               
                            </div>
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label for="Date" class="col-form-label">Date spent:</label>
                                    <input type="datetime-local" class="form-control" name="spent_at" id="discount">
                                </div>                               
                            </div>
                            <div class="col-md-12">
                                <div class="mb-3">
                                    <label for="Date" class="col-form-label">Reason:</label>
                                    <textarea name="reason" class="form-control" id=""></textarea>
                                </div>                               
                            </div>
                            
                            
                        </div>
                            <button class="btn btn-secondary" type="button" data-dismiss="modal">Cancel</button>
                            <button class="btn btn-primary" type="submit" id="">Add</button>
                        
                    </form>        
                </div>
            </div>
        </div>
    </div>




