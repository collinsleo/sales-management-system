                    <!-- DataTales Example -->
                    <div class="card shadow mb-4">
                        <div class="card-header py-3">
                            <h6 class="m-0 font-weight-bold text-primary">DataTables </h6>
                        </div>
                        <div class="card-body">
                            <div class="table-responsive">
                                <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                                    <thead>
                                       <tr>
                                           <th>id</th>
                                           <th>amount</th>
                                           <th>reason</th>
                                            <th>user_id</th>
                                           <th>date spent</th>
                                            <th>action</th>
                                        </tr>
                                    </thead>
                                    <tfoot>
                                        <tr>
                                           <th>id</th>
                                           <th>amount</th>
                                           <th>reason</th>
                                           <th>user_id</th>
                                           <th>creatd_at</th>
                                            <th>action</th>
                                        </tr>
                                    </tfoot>
                                    <tbody>
                                         <% if(expenses && expenses.length > 0){%>
                                            <% expenses.forEach((expenditures)=>{
                                                %>

                                                <tr>
                                                    <td><%= expenditures.id %></td>
                                                    <td><%= expenditures.amount %></td>
                                                    <td><%= expenditures.reason %></td>
                                                    <td><%= expenditures.user_id %></td>
                                                    <td><%= expenditures.created_at %></td>
                                                   
                                                   
                                                    <td>
                                                        <a href="/expenses/update/<%= expenditures.id %>" class="btn btn-sm btn-primary"><i class="fas fa-edit"></i></a>
                                                        <%if(user.role == 'admin'){%>

                                                            <form action="/expenses/delete/<%= expenditures.id %>" method="get" style="display:inline;">
                                                                <button type="submit" class="btn btn-sm btn-danger" onclick="return confirm('Are you sure?')">
                                                                    <i class="fas fa-trash"></i>
                                                                </button>
                                                            </form>
                                                        <%}%>
                                                        
                                                    </td>
                                                </tr>

                                            <%}) %>
                                        <% }else{%>
                                            <tr>
                                                <td colspan="10" class="text-center">No products found</td>
                                            </tr>
                                        <% } %>

                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>

