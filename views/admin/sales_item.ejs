                                            <th>Quantity</th>
                                            <th>selling_price</th>
                                            <th>total_cost</th>
                                        </tr>
                                    </tfoot>
                                    <tbody>
                                        <% if(sales && sales.length > 0){%>
                                            <% sales.forEach((product)=>{
                                                let image = product.image ? product.image: '/undraw_profile.png'
                                                %>

                                                <tr>
                                                    <td><%= product.product_id %></td>
                                                    <td><%= product.name %></td>
                                                    <td>
                                                        <img src="/uploads/<%= product.image %>" alt="product image" class="img-fluid" style="width: 50px; height: 50px;">
                                                       
                                                    </td>
                                                    <td><%= product.sale_id %></td>
                                                    <td><%= product.quantity %></td>
                                                    <td><%= product.selling_price %></td>
                                                    <td><%= product.total_price %></td>
                                                    
                                                   
                                                </tr>

                                            <%}) %>
                                        <% }else{%>
                                            <tr>
                                                <td colspan="8" class="text-center ">No products found</td>
                                            </tr>
                                        <% } %>                                       
                                    </tbody>
                                </table>
                            </div>
