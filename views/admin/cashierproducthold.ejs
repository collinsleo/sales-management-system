<%- include('../layout/adminheader.ejs') %>

                <!-- Begin Page Content -->
                <div class="container-fluid">

                    <!-- Page Heading -->                     

                    <!-- alert-->
                    <div class="row">
                        <div class="col-md-3"></div>
                        <div class="col-md-6">
                          <% if(error_msg  && error_msg.length > 0 ){ %>
                            <div class="alert alert-danger alert-dismissible fade show" role="alert">
                                <strong>Oh no!</strong> <%= error_msg %>
                                <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                                    <span aria-hidden="true">&times;</span>
                                </button>
                            </div>
                          <%} %>
                          
                          <% if(success_msg  && success_msg.length > 0 ){ %>
                            <div class="alert alert-success alert-dismissible fade show" role="alert">
                                <strong>Awesome!</strong> <%= success_msg %>
                                <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                                    <span aria-hidden="true">&times;</span>
                                </button>
                            </div>
                          <%} %>
                        </div>
                        <div class="col-md-3"></div>
                    </div>

                    <!-- DataTales Example -->
                    <div class="card shadow mb-4">
                        <div class="card-header py-3">
                            <h6 class="m-0 font-weight-bold text-primary">Pending_Payment_Tables </h6>
                        </div>
                        <div class="card-body">
                            <div class="table-responsive">
                                <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                                    <thead>
                                        <tr>
                                            <th>Cath_Id</th>
                                            <th>Name</th>
                                            <th>Barcode</th>
                                            <th>carton_price</th>
                                            <th>Unit_price</th>
                                            <th>Quantity</th>
                                            <th>Promo</th>
                                            <th>Image</th>
                                            <th>Action</th>
                                        </tr>
                                    </thead>
                                    <tfoot>
                                        <tr>
                                            <th>Cath_Id</th>
                                            <th>Name</th>
                                            <th>Barcode</th>
                                            <th>carton_price</th>
                                            <th>Unit_price</th>
                                            <th>Quantity</th>
                                            <th>Promo</th>
                                            <th>Image</th>
                                            <th>Action</th>
                                        </tr>
                                    </tfoot>
                                    <tbody>
                                        <% if(products && products.length > 0){%>
                                            <% products.forEach((product)=>{
                                                let image = product.image ? product.image : '/upload/undraw_profile.png';
                                                %>

                                                <tr>
                                                    <td><%= product.category_id %></td>
                                                    <td><%= product.name %></td>
                                                    <td><%= product.barcode %></td>
                                                    <td><%= product.carton_selling_price %></td>
                                                    <td><%= product.unit_selling_price %></td>
                                                    <td><%= product.quantity %></td>
                                                    <td><%= product.promo ? product.promo : 'No' %></td>
                                                    <td>
                                                        <img src="/uploads/<%= image %>" alt="product image" class="img-thumbnail" style="width: 50px; height: 50px;">
                                                    </td>
                                                    <td>
                                                        <a href="/product/cart?id=<%= product.id %>" class="btn btn-sm btn-primary m-1"><i class="fas fa-plus"></i></div>
                                                        <a href="/product/cart?id=<%= product.id %>" class="btn btn-sm btn-success m-1">confirm</i></div>
                                                        <a href="/product/cart?id=<%= product.id %>" class="btn btn-sm btn-danger m-1">Cancel</i></div>
                                                    </td>
                                                </tr>

                                            <%}) %>
                                        <% }else{%>
                                            <tr>
                                                <td colspan="8" class="text-center">No products found</td>
                                            </tr>
                                        <% } %>
                                            
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>

                </div>
                <!-- /.container-fluid -->
            </div>
            <!-- End of Main Content -->
        </div>
        <!-- End of Content Wrapper -->
    </div>
    <!-- End of Page Wrapper -->

    <!-- Scroll to Top Button-->
    <a class="scroll-to-top rounded" href="#page-top">
        <i class="fas fa-angle-up">top</i>
    </a>

            
<%- include('../layout/adminfooter.ejs') %>